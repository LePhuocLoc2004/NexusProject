@{
    var selectedServicePackage = ViewBag.SelectedServicePackage as DEMO_NEXUSPROJECT.Models.ServicePackage;
    var servicePackages = ViewBag.ServicePackages as IEnumerable<DEMO_NEXUSPROJECT.Models.ServicePackage>;
}

