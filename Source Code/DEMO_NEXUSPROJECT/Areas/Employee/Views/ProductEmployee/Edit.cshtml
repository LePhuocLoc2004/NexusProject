@model DEMO_NEXUSPROJECT.Models.Product

@{
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Product</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="employee" asp-controller="DashboardEmployee" asp-action="Index">Home</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Product</h3>
                    </div>

                    <form method="post" asp-area="employee" asp-controller="ProductEmployee" asp-action="Edit" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ProductName">Product Name</label>
                                <input type="text" class="form-control" asp-for="ProductName" readonly />
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"> </textarea>
                            </div>
                            <div class="form-group">
                                <label for="Price">Price</label>
                                <input type="text" class="form-control" asp-for="Price" />
                            </div>

                            <div class="form-group">
                                <label for="Photo">Photo</label>
                                <br />
                                <input type="file" id="Photo" name="file" />
                                <br />
                                @if (!string.IsNullOrEmpty(Model.Photo))
                                {
                                    <img src="~/images/@Model.Photo" width="70" height="70" />
                                }
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->