@model DEMO_NEXUSPROJECT.Models.Customer

@{
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Customer</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="employee" asp-controller="DashboardEmployee" asp-action="Index">Home</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title" >Edit Customer</h3>
                    </div>

                    <form method="post" asp-area="employee" asp-controller="CustomerEmployee" asp-action="Edit" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AccountNumber">Account Number</label>
                                <input type="text" class="form-control" asp-for="AccountNumber" readonly />
                            </div>
                            <div class="form-group">
                                <label for="FullName">Full Name</label>
                                <input type="text" class="form-control" asp-for="FullName" />
                            </div>
                            <div class="form-group">
                                <label for="Address">Address</label>
                                <input type="text" class="form-control" asp-for="Address" />
                            </div>
                            <div class="form-group">
                                <label for="CityCode">City Code</label>
                                <input type="text" class="form-control" asp-for="CityCode" />
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Phone Number</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" />
                            </div>
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control"  asp-for="Email" />
                            </div>
                            <div class="form-group">
                                <label for="Idcard">ID Card</label>
                                <input type="text" class="form-control"  asp-for="Idcard" />
                            </div>
                            <div class="form-group">
                                <label for="ReqistrationDate">Reqistration Date</label>
                                <input type="text" class="form-control" asp-format="{0:MM/dd/yyyy}" id="ReqistrationDate" asp-for="RegistrationDate" />
                            </div>
                            <div class="form-group">
                                <label for="Status">Status</label>
                                <select class="form-control" asp-for="Status">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Photo">Photo</label>
                                <br />
                                <input type="file"  id="Photo" name="file" />
                                <br />
                                @if (!string.IsNullOrEmpty(Model.Photo))
                                {
                                    <img src="~/images/@Model.Photo" width="70" height="70"  />
                                }
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->