@model DEMO_NEXUSPROJECT.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all" style="background-color:black">
                        <i class="fa fa-bars"></i>
                        <span>All Service</span>
                    </div>
                    <ul>
                        <li><a href="#">Mobile Services</a></li>
                        <li><a href="#">Data Package</a></li>
                        <li><a href="#">Subscription Package </a></li>
                        <li><a href="#">Service</a></li>
                        <li><a href="#">Subscription Type</a></li>
                        <li><a href="#">Long-Term Connection</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 78.8711.330</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="breadcrumb-section set-bg" data-setbg="../img/product/5g.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form asp-controller="Product" asp-action="ProcessPayment" method="post" enctype="multipart/form-data">
                @{
                    int index = 1;
                }
                @foreach (var item in ViewBag.cart)
                {
                    <input type="hidden" name="item_number_@index" value="@item.ServicePackageId" />
                    <input type="hidden" name="item_name_@index" value="@item.ServicePackageName" />
                    <input type="hidden" name="amount_@index" value="@item.Price" />
                    index++;
                }
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Username<span>*</span></p>
                                    <input asp-for="FullName" placeholder="Username" type="text" style="color: black;">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone Number<span>*</span></p>
                                    <input asp-for="PhoneNumber" placeholder="Phone Number" type="text" style="color: black;">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input asp-for="Address" type="text" placeholder="Street Address" class="checkout__input__add">
                        </div>

                        <div class="checkout__input">
                            <p>Postcode / ZIP<span>*</span></p>
                            <input asp-for="CityCode" placeholder="CityCode" type="text">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>IDCard<span>*</span></p>
                                    <input asp-for="Idcard" placeholder="IDCard" type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input asp-for="Email" placeholder="Email" type="text">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (var item in ViewBag.cart)
                                {
                                    <li>@item.ServicePackageName <span>$@item.Price</span></li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>$@ViewBag.total</span></div>
                            <div class="checkout__order__total">Total <span>$@ViewBag.total</span></div>
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Checkout With PayPal
                                    <input type="checkbox" id="payment" name="paymentMethod" value="PayPal" checked>
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Pay Later
                                    <input type="checkbox" id="paypal" name="paymentMethod" value="PayLater">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>