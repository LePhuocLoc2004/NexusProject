                    <h2>Finance</h2>
                    <div class="col-md-12">

                        @if (Model.TransactionLogs != null && Model.TransactionLogs.Any())
                        {
                            @foreach (var log in Model.TransactionLogs)
                            {
                                <div class="card">
                                    <div class="card__title">
                                        Transaction Log @log.TransactionId
                                        @if (!string.IsNullOrEmpty(log.Details))
                                        {
                                            try
                                            {
                                                var detailsDict = JsonConvert.DeserializeObject<Dictionary<string, object>>(log.Details);

                                                var amountPaid = detailsDict.ContainsKey("Finace AmountPaid") ? decimal.Parse(detailsDict["Finace AmountPaid"].ToString()) : 0;
                                                var remainingAmount = detailsDict.ContainsKey("Finace RemainingAmount") ? decimal.Parse(detailsDict["Finace RemainingAmount"].ToString()) : 0;

                                                if (amountPaid > 0 && remainingAmount == 0)
                                                {
                                                    <span class="text-green"> - Đã thanh toán</span>
                                                }
                                                else
                                                {
                                                    <span class="text-red"> - Chưa thanh toán</span>
                                                }
                                            }
                                            catch (JsonReaderException ex)
                                            {
                                                <span class="text-red"> - Lỗi khi phân tích chi tiết: @ex.Message</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-red"> - Không có chi tiết.</span>
                                        }
                                    </div>

                                    <div class="card__data">
                                        @if (!string.IsNullOrEmpty(log.Details))
                                        {
                                            try
                                            {
                                                var detailsDict = JsonConvert.DeserializeObject<Dictionary<string, object>>(log.Details);

                                                <div class="card__right">
                                                    @foreach (var (key, value) in detailsDict)
                                                    {
                                                        <div class="item">@key</div>
                                                    }
                                                </div>

                                                <div class="card__left">
                                                    @foreach (var (key, value) in detailsDict)
                                                    {
                                                        var cssClass = string.Empty;

                                                        if (key == "Finace AmountPaid")
                                                        {
                                                            var amountPaid = decimal.Parse(value.ToString());
                                                            var remainingAmount = detailsDict.ContainsKey("Finace RemainingAmount") ? decimal.Parse(detailsDict["Finace RemainingAmount"].ToString()) : 0;

                                                            cssClass = amountPaid > 0 && remainingAmount == 0 ? "text-green" : "text-red";

                                                            <div class="item @cssClass">
                                                                @value
                                                            </div>
                                                        }
                                                        else if (key == "Finace RemainingAmount")
                                                        {
                                                            var remainingAmount = decimal.Parse(value.ToString());
                                                            cssClass = remainingAmount == 0 ? "text-green" : "text-red";

                                                            <div class="item @cssClass">
